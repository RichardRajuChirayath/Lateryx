{
  "manifest_version": 3,
  "name": "Lateryx Security",
  "short_name": "Lateryx",
  "version": "2.0.0",
  "description": "Cloud Safety & Compliance on Autopilot. See security status on GitHub PRs instantly.",
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    },
    "default_title": "Lateryx Security"
  },
  
  "permissions": [
    "storage",
    "activeTab"
  ],
  
  "host_permissions": [
    "https://github.com/*",
    "https://api.github.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["https://github.com/*/pull/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["https://github.com/*"]
    }
  ]
}
