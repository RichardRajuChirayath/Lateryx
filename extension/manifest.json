{
  "manifest_version": 3,
  "name": "Lateryx Security",
  "short_name": "Lateryx",
  "version": "2.0.0",
  "description": "Cloud Safety & Compliance on Autopilot. See security status on GitHub PRs instantly.",
  "icons": {
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon-128.png"
    },
    "default_title": "Lateryx Security"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://github.com/*",
    "https://api.github.com/*",
    "http://localhost/*",
    "http://127.0.0.1/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*/pull/*",
        "http://localhost/*",
        "http://127.0.0.1/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-lateryx": {
      "suggested_key": {
        "default": "Alt+L",
        "mac": "Command+Shift+L"
      },
      "description": "Toggle Lateryx security status badge"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*"
      ],
      "matches": [
        "https://github.com/*"
      ]
    }
  ]
}